<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background01">

    <ImageView
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/background02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/background03"
        app:layout_constraintBottom_toTopOf="@+id/newGame"
        app:layout_constraintEnd_toEndOf="@+id/newGame"
        app:layout_constraintStart_toStartOf="@+id/newGame" />

    <com.fall.game.core.library.CustomImageButton
        android:id="@+id/newGame"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/new_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.fall.game.core.library.CustomImageButton
        android:id="@+id/coontinue"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newGame" />

    <com.fall.game.core.library.CustomImageButton
        android:id="@+id/exit"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coontinue" />


    <TextView
        android:id="@+id/privacyText"
        style="@style/BasicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/privacy_policy"
        android:textColor="#0000FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>